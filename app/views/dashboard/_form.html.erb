<div class="container-fluid text-center">
    <h2 class = "float-left"> My Dashboard </h2>

<div class="margin" >
  <div class="row">

     <div class="col-sm-6">   
     <%= image_tag("Lookoutsche.jpg", :alt => "Schedule", class: "resize") %>
     </div>
     
     
        
      <div class="col-sm-6">
        <h1>This weeks schedule</h1> 
        <% if @images[0]!=nil %>
        <br>
        <%= image_tag(@images[0].img_url.to_s) %> <br>
        <% end %>
        
        
        
        <% if current_user.admin %>
        
        <br><br>
    
        <button><span> <%=link_to'Upload schedule', new_image_path %></span></button>
     
        <button><%= link_to 'Delete image', @images[0], method: :delete, data: { confirm: 'Are you sure?' } %></button>
        <button><%= link_to 'Recent schedules uploads', images_path %></button>
        <% else %>
        <button><%= link_to 'View Schedules', images_path %></button>
        
        <% end %>
        
    </div>
 </div>

  
  
    <div class="row">
        <div class="col-sm-6">
            <%= image_tag("announcement.png", :alt => "announcment", class: "resize") %>
        </div>
        
        <div class="col-sm-6">
           <h1>Announcements</h1> 
           <% if @announcement[0]!=nil %>
        <br>
        <strong> <%= @announcement[0].title %></strong><br><br>
        <div class="txt">
           
                 <%= @announcement[0].text %> <br>
           <% end %>
           
        </div>
           <br>
            <% if current_user.admin %>
            <button><span> <%=link_to'Upload an announcement', new_announcement_path %></span></button>
            <button><%= link_to 'Delete announcements', @announcement[0], method: :delete, data: { confirm: 'Are you sure?' } %></button>
            
            <% end %>
        </div>
        
                 
           
    </div>
     
    </div>
</div>
