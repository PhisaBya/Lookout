<h1>Listing announcement</h1>
<%= link_to 'New announcement', new_announcement_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @announcement.each do |announcement| %>
    <tr>
      <td><%= announcement.title %></td>
      <td><%= announcement.text %></td>
      <td><%= link_to 'Show', announcement_path(announcement) %></td>
      <td><%= link_to 'Edit', edit_announcement_path(announcement) %></td>
      <td><%= link_to 'Destroy',
      announcement_path(announcement),
      method: :delete,
      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>